public class Listener implements Listener {

    BedTime_plugin p = null;

    public BedTime_pluginListener(BedTime_plugin p) {
	this.p = p;
    }

    @EventHandler
    public void onPlayerBedEnterEvent(final PlayerBedEnterEvent ev) {
	p.addOnePLayerOnBed();
    }
    
    @EventHandler
    public void onPlayerBedLeaveEvent(final PlayerBedLeaveEvent ev) {
	p.removeOnePLayerOnBed();
    }

}
